generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  @@map("users")
  id        Int      @id
  fullname  String
  address   String
  password  String
  userBalances UserBalance[]
  createdAt DateTime  @default(now())
}

model UserBalance {
  @@map("user_balances")
  id        Int      @id @default(autoincrement())
  user    User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  Int 
  va   Int
  balance  String
  invPack String
  createdAt DateTime  @default(now())
}

model Form{
  @@map("forms")
  id  Int @id @default(autoincrement())
  isClient Boolean
  firstName String
  lastName String
  email String
  phone String
  typeAssistance String
  message String
}